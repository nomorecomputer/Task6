<!--  個人資料 tabPanel 內容 -->
<div
  class="tab-pane fade"
  id="pills-personInfo"
  role="tabpanel"
  aria-labelledby="pills-personInfo-tab"
  tabindex="0"
>
  <form action="">
    <!-- ******************** -->
    <div class="d-flex gap-4 border-bottom pb-5 mb-5">
      <!-- #region left aside -->
      <div class="flex-shrink-0 leftSide-width-300 ">
        <h2 class="fs-4 mb-3">個人資料</h2>
      </div>

      <!--  right main -->
      <div class="w-100">
        <!-- 1-1 頭貼 -->
        <div class="d-flex align-items-end mb-4">
          <img
            src="/assets/images/avatar.png"
            alt="avatar_default"
            class="border rounded-circle me-2"
          />
          <label class="btn border fs-6  hover-change-bg" for="attachedUpload2">
            <span class="material-icons-outlined me-1 align-bottom"
              >file_upload</span
            >
            上傳檔案</label
          >
          <input
            class="d-none"
            type="file"
            id="attachedUpload2"
            name="attachedUpload2"
          />
        </div>
        <!-- 1-2 姓名 -->
        <div class="mb-4">
          <div class="form-floating">
            <input
              class="form-control"
              placeholder="姓名"
              id="studentName"
              value="Mokumaru"
              style="height: 60px"
            ></input>
            <label for="studentName" class="fs-7" style="color: #141a1f">姓名</label>
          </div>
        </div>
        <!-- 1-3 性別 -->

        <!-- 1-4 生日 -->
        <div class="mb-4">
          <div class="form-floating">
            <input
              class="form-control"
              placeholder="生日"
              id="birthday"
              style="height: 60px"
              value="2000/01/10"
            ></input>
            <label for="birthday" class="fs-7" style="color: #141a1f"
              >生日</label
            >
          </div>
        </div>
        <!-- 1-5 密碼 -->
         
           <label for="changePassword" class="d-block mb-2">密碼</label>
          <button type="button" id="changePassword" 
                  class="btn  btn-outline-dark border rounded-4 mb-4"
                   data-bs-toggle="modal" 
                   data-bs-target="#exampleModal"
                   >
            修改密碼
          <span class="material-icons-outlined me-1 align-bottom ms-2 "> chevron_right </span>
          </button>
         <%- include('./layout/changePassword.ejs'); -%>
        <!-- 1-6 信箱 -->
        <div class="mb-4">
          <div class="form-floating">         
            <input
              class="form-control "
              placeholder="信箱"
              id="studentEmail"
              style="height: 60px"
              value="mokumaru@mail.com"></input>
            <label for="studentEmail" class="fs-7" style="color: #141a1f">信箱</label>
          </div>
          <label for="studentEmail" class="fs-7 email-ps" style="color: #141a1f">盡量勿使用Yahoo或hotmail郵件信箱，以免因擋信、漏信</label>
        </div>
        <!-- 1-7 連絡電話 -->
        <div class="mb-4">
          <div class="form-floating">
            <input
              class="form-control"
              placeholder="連絡電話"
              id="studentPhone"
              style="height: 60px"
              value="09-1234-5678"
            ></input>
            <label for="studentPhone" class="fs-7" style="color: #141a1f"
              >連絡電話</label
            >
          </div>
        </div>

        <!-- 1-8 通訊地址 -->
        <div class="mb-4">
          <div class="form-floating">
            <input
              class="form-control"
              placeholder="通訊地址"
              id="studentAddress"
              style="height: 60px"
              value="高雄市三民區九如一路87號"
            ></input>
            <label for="studentAddress" class="fs-7" style="color: #141a1f"
              >通訊地址</label
            >
          </div>
        </div>
      </div>
    </div>

    <!-- ******************** -->
    <div class="d-flex mb-5 justify-content-center">
      <button type="button" class="btn me-2 btn-outline-dark border  px-4">
        重新填寫<span class="material-icons-outlined ms-1 align-bottom">
          chevron_right
        </span>
      </button>
      <button type="button" class="btn me-2 btn-dark  px-4">
        儲存更新<span class="material-icons-outlined ms-1 align-bottom">
          chevron_right
        </span>
      </button>
    </div>
  </form>
</div>
